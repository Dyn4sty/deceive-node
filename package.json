{
  "name": "deceive-node",
  "version": "1.0.1",
  "description": "Appear offline in League of Legends, VALORANT, and Legends of Runeterra",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "league-deceiver": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "package": "bun build --compile --minify --sourcemap ./src/index.ts --outfile ./dist/deceive-node",
    "package:win": "bun build --compile --minify --sourcemap --windows-icon=./assets/logo.ico --windows-hide-console --target=bun-windows-x64 ./src/index.ts --outfile ./dist/deceive-node-win.exe && node scripts/add-icon.mjs",
    "sign:win": "node scripts/sign-exe.mjs",
    "generate:cert": "node scripts/generate-cert.mjs",
    "release:win": "bun run package:win && bun run sign:win",
    "package:mac": "bun build --compile --minify --sourcemap --target=bun-darwin-x64 ./src/index.ts --outfile ./dist/deceive-node-macos",
    "package:linux": "bun build --compile --minify --sourcemap --target=bun-linux-x64 ./src/index.ts --outfile ./dist/deceive-node-linux",
    "package:all": "bun run package:win && bun run package:mac && bun run package:linux",
    "prepare": "husky || true",
    "generate:cert:base64": "scripts/generate-cert-base64.bat"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "node-forge": "^1.3.1",
    "systray2": "^2.0.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "rcedit": "^4.0.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dyn4sty/deceive-node.git"
  },
  "keywords": [
    "league-of-legends",
    "valorant",
    "legends-of-runeterra",
    "offline",
    "presence",
    "riot-games",
    "deceive"
  ],
  "author": "",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
